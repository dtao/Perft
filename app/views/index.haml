%ul.tabs
  %li= link_to("Projects", "#projects", :class => "selected")
  %li= link_to("Machines", "#machines")

%section#projects.displayed
  %ol.projects
    - @projects.each do |p|
      %li= link_to(p.name, "/projects/#{p.id}")

  %a.reveal-link(href="#create-project") Create a new project

  - form_tag("/projects/create", :id => "create-project") do
    .field
      = label_tag("Name")
      = text_field_tag(:name)
    = submit_tag("Create")

%section#machines
  %ul.machines
    - @machines.each do |p|
      %li= link_to(p.name, "/machines/#{p.id}")

  %a.reveal-link(href="#add-machine") Add a new machine

  - form_tag("/machines/create", :id => "add-machine") do
    .field
      = label_tag("Name")
      = text_field_tag(:name)
    .field
      = label_tag("Description")
      = text_field_tag(:description)
    = submit_tag("Add")
