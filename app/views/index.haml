%section#create-project
  %h1 Create a project

  - form_tag("/projects/create") do
    - field_set_tag("Project Name") do
      = text_field_tag(:name)
    = submit_tag("Create")

%section#projects
  %h1 Projects

  %ol.projects
    - @projects.each do |p|
      %li= link_to(p.name, "/projects/#{p.id}")

%section#add-machine
  %h1 Add a machine

  - form_tag("/machines/create") do
    - field_set_tag("Machine Name") do
      = text_field_tag(:name)
    - field_set_tag("Description") do
      = text_field_tag(:description)
    = submit_tag("Create")

%section#machines
  %h1 Machines

  %ul.machines
    - @machines.each do |p|
      %li= link_to(p.name, "/machines/#{p.id}")
