%section.performance-test-run
  %h1
    .suite-name= @suite.name
    .run-date= format_date(@suite_run.created_at)
    .run-time= format_time(@suite_run.created_at)

  %ol.test-runs
    - @suite_run.performance_test_runs(:order => [:elapsed_seconds.desc]).each do |test_run|
      %li
        .name= link_to(test_run.performance_test.name, "/tests/#{test_run.performance_test.id}")
        .date= format_date(test_run.created_at)
        .time= format_time(test_run.created_at)
        .elapsed_seconds= test_run.elapsed_seconds

  = link_to "Back", "/suites/#{@suite.id}"
