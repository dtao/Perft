- content_for(:javascript) do
  :javascript
    function getChartOptions() {
      return {
        xAxis: {
          plotBands: [{
            from: #{@current_index - 0.5},
            to: #{@current_index + 0.5},
            color: 'rgba(68, 170, 213, 0.1)',
          }]
        }
      };
    }

%section.performance-test
  %h1= @test.name

  %h2= @test.suite.name

  %table.performance-test-runs.render-to-spline-chart(data-value-columns="3,4" data-order="descending" data-options="getChartOptions")
    %tr
      %th.changeset Changeset
      %th.date Date
      %th.time Time
      - @tags.each do |tag_key|
        %th.tags= tag_key

    - @test_runs.each do |suite_run, runs|
      %tr(class="#{suite_run == @suite_run ? 'current' : ''}")
        %td.changeset
          = link_to(render_changeset(suite_run), "/tests/#{@test.id}/#{suite_run.id}")
        %td.date= format_date(suite_run.created_at)
        %td.time= format_time(suite_run.created_at)
        - @tags.each do |tag_key|
          %td.elapsed_seconds= format_decimal(runs[tag_key].try(:elapsed_seconds))

  .actions= link_to("Back", "/suites/#{@test.suite_id}/latest")

- content_for(:supplemental) do
  %textarea.code(data-mode="diff")=h @suite_run.changes
