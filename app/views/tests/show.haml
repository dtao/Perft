%section.performance-test
  %h1= @test.name

  %h2= @test.performance_test_suite.name

  %table.performance-test-runs.render-to-line-chart(data-value-columns="2" data-order="descending")
    %tr
      %th.date Date
      %th.time Time
      %th.elapsed_seconds Elapsed Seconds
      %th.comment Comment

    - @test_runs.each do |run|
      %tr
        %td.date= format_date(run.created_at)
        %td.time= format_time(run.created_at)
        %td.elapsed_seconds= run.elapsed_seconds
        %td.comment= run.performance_test_suite_run.comment

  .actions= link_to("Back", "/suites/#{@test.performance_test_suite_id}/latest")

  - if !@latest_run.wip?
    %textarea.changes=h @latest_run.changes
